@{
  ViewData["Title"] = ViewData["Tur"];
}

@model FoodOfTypesViewModel
@await Component.InvokeAsync("FtypesMenu")
<main class="container">
  <h2 class="mb-4 text-center p-5">@ViewData["Tur"]</h2>

  <div class="row g-4">

    @foreach (var food in Model.FoodsOfType)
    {

      <div class="col-12 col-md-6 col-lg-3">
        <a href="/yemek/@food.url" class="text-decoration-none text-dark">
          <div class="card recipe-card shadow-sm h-100">
           <img src="/food-img/@food.Images[0].name" class="card-img-top" alt="TatlÄ±">
            <div class="card-body">
              <div class="d-flex">
                  <div class="d-flex" style="font-size: medium;"><i class="bi bi-heart-fill text-danger"></i><p style="margin-left: 5px;">@food.Likes.Count</p></div>
                  <div class="d-flex" style="font-size: medium; margin-left: 3%;"><i class="bi bi-chat-left-text"></i><p style="margin-left: 5px;">@food.Comments.Count</p></div>
                  <div class="d-flex" style="font-size: medium; margin-left: 3%;"><i class="bi bi-eye"></i><p style="margin-left: 5px;">@food.views.Count</p></div>
                </div>
              <h5 class="card-title">@food.isim</h5>
              <p class="card-text text-muted">@food.aciklama</p>
            </div>
          </div>
        </a>
      </div>
    }

  </div>
  
</main>
