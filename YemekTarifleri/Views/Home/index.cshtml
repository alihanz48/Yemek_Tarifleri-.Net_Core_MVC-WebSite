@{
  ViewData["Title"] = "Yemek Tarifleri";
}

@model FoodsViewModel

<header class="position-relative text-white" style="height: 400px;">

  <div class="position-absolute top-0 start-0 w-100 h-100"
    style="background: url('/img/yemek-fotografi-cekimi.jpg') center/cover no-repeat; z-index: 1;">
  </div>


  <div class="position-absolute top-0 start-0 w-100 h-100" style="background-color: rgba(0, 0, 0, 0.5); z-index: 2;">
  </div>


  <div
    class="container h-100 d-flex flex-column justify-content-center align-items-center text-center position-relative"
    style="z-index: 3;">
    <h1 class="display-5 fw-bold">Lezzetli Tarifler Seni Bekliyor</h1>
    <p class="lead">Binlerce ev yapımı tarif ile sofranızı zenginleştirin</p>
  </div>
</header>

@await Component.InvokeAsync("FtypesMenu")
<section>
  <div class="container py-5">
    <div class="row g-4">
      @foreach (var food in Model.foods)
      {
        <div class="col-md-4">
          <a href="/yemek/@food.url" class="text-decoration-none">
            <div class="card recipe-card">
              <img src="/food-img/@food.Images[0].name" class="card-img-top" alt="Tatlı">
              <div class="card-body">
                <div class="d-flex">
                  <div class="d-flex" style="font-size: medium;"><i class="bi bi-heart-fill text-danger"></i>
                    <p style="margin-left: 5px;">@food.Likes.Count</p>
                  </div>
                  <div class="d-flex" style="font-size: medium; margin-left: 3%;"><i class="bi bi-chat-left-text"></i>
                    <p style="margin-left: 5px;">@food.Comments.Count</p>
                  </div>
                  <div class="d-flex" style="font-size: medium; margin-left: 3%;"><i class="bi bi-eye"></i>
                    <p style="margin-left: 5px;">@food.views.Count</p>
                  </div>
                </div>
                <h5 class="card-title">@food.isim</h5>
                <p class="card-text text-muted">@food.aciklama</p>
              </div>
            </div>
          </a>
        </div>
      }

    </div>
  </div>
</section>
