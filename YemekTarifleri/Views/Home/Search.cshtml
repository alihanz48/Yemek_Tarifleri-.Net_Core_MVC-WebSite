@model SearchDataViewModel
<section>
    <div class="container py-5 d-flex justify-content-center">
        <div class="d-flex flex-wrap justify-content-center gap-4 w-100">

            @foreach (var food in Model.foods)
            {
                <a href="/yemek/@food.url" class="text-decoration-none w-100" style="max-width: 700px;">
                    <div class="card shadow-sm d-flex flex-row align-items-center p-3 recipe-card w-100">
                        <div class="d-flex">
                        </div>
                        <img src="/food-img/@food.Images[0].name" alt="@food.isim"
                            style="width: 150px; height: 100px; object-fit: cover; border-radius: 8px;" />

                        <div class="ms-3 flex-grow-1">
                            <div class="d-flex">
                                <div class="d-flex" style="font-size: medium;"><i class="bi bi-heart-fill text-danger"></i>
                                    <p style="margin-left: 5px;">@food.Likes.Count</p>
                                </div>
                                <div class="d-flex" style="font-size: medium; margin-left: 3%;"><i
                                        class="bi bi-chat-left-text"></i>
                                    <p style="margin-left: 5px;">@food.Comments.Count</p>
                                </div>
                                <div class="d-flex" style="font-size: medium; margin-left: 3%;"><i class="bi bi-eye"></i>
                                    <p style="margin-left: 5px;">@food.views.Count</p>
                                </div>

                            </div>
                            <h5 class="card-title mb-1 text-dark">@food.isim</h5>
                            <p class="card-text text-muted mb-0">@food.aciklama</p>
                        </div>

                    </div>

                </a>
            }

        </div>
    </div>
</section>
