@{
    var userimg = User.FindFirstValue(ClaimTypes.UserData);
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet">

    <style>
        .recipe-card img {
            height: 200px;
            object-fit: cover;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 50%;
        }
    </style>
    @RenderSection("style", required: false)
    <style>
        /* Giriş Yap ve Kaydol butonları için özel sınıf oluşturup yüksekliği ayarla */
        .btncustom {
            padding: 0.3rem 1rem;
            /* Dikey padding küçültüldü */
            height: 80%;
            width: 100px;
            /* Hafif köşeler */
        }

        .second-header {
            width: 100%;
            height: 5%;
            text-align: center;
        }
    </style>
    @if (User.FindFirstValue(ClaimTypes.Role) == "admin")
    {
        <style>
            body {
                background-color: #e3e3e3;
            }
        </style>
    }

</head>

<body>

    <div class="container d-flex justify-content-between align-items-center">

        <!-- Sol: Logo + Başlık -->
        <a class="navbar-brand d-flex align-items-center" href="/">
            <img src="/img/yemektarifi_logo.png" style="width:45px;" alt="Logo" class="me-2 rounded-circle" />
            <span class="fw-bold text-danger fs-4">TarifDünyası</span>
        </a>

        <!-- Orta: Arama Formu -->
        <div class="input-group w-100">
            @await Component.InvokeAsync("Search")
        </div>

        <!-- Sağ: Giriş / Kaydol -->
        @if (User.Identity!.IsAuthenticated)
        {
            <nav class="navbar navbar-expand-lg navbar-warning bg-warning px-3 rounded">
                <div class="ms-auto dropdown">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
                        id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="/user-img/@userimg" alt="Kullanıcı Avatarı" class="user-avatar me-2">
                        <span class="d-none d-md-inline">@User.FindFirstValue(ClaimTypes.GivenName)</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end text-small" aria-labelledby="userDropdown">
                        <li>
                            <h6 class="dropdown-header">Hoş geldin, @User.FindFirstValue(ClaimTypes.Email)</h6>
                        </li>
                        <li><a class="dropdown-item" asp-controller="Users" asp-action="MyAccount">Profil</a></li>
                        <li><a class="dropdown-item" asp-controller="Food" asp-action="AddFood">Yeni tarif ekle</a></li>
                        @if (User.FindFirstValue(ClaimTypes.Role) == "admin")
                        {
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="WaitConfirmation">Onay bekleyen yemekler</a>
                            </li>
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="CreateFtypes">Yemek türü ekle</a></li>
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="UserManagement">Kullanıcı yönetimi</a></li>
                        }

                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item text-danger" asp-controller="Users" asp-action="LogOutPage">Çıkış
                                Yap</a></li>
                    </ul>
                </div>
            </nav>
        }
        else
        {
            <div class="d-flex">
                <a asp-controller="Users" asp-action="Login" class="btn btn-outline-secondary me-2 btncustom">Giriş
                    Yap</a>
                <a asp-controller="Users" asp-action="Register" class="btn btn-danger btncustom">Kaydol</a>
            </div>
        }
    </div>
    @if (User.FindFirstValue(ClaimTypes.Role) == "admin")
    {
        <div class="second-header">
            <h4>Admin Girişi</h4>
        </div>
    }


    @RenderBody()
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container text-center">
            <p class="mb-2">© 2025 TarifDünyası. Tüm hakları saklıdır.</p>
            <div>
                <a href="#" class="text-white me-3"><i class="bi bi-facebook"></i> Facebook</a>
                <a href="#" class="text-white me-3"><i class="bi bi-instagram"></i> Instagram</a>
                <a href="#" class="text-white"><i class="bi bi-envelope"></i> İletişim</a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</body>

</html>